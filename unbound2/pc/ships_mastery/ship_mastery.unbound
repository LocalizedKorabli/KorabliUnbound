	(macro TOOLTIP_SYSTEM_DEFAULT_BACKGROUND)
	(hblock
		(style
			(width = 100%)
			(paddingTop = "M")
			(paddingBottom = "M")
			(paddingLeft = "M")
			(paddingRight = "S")
			(align = "middle")
		)
		(tf
			(class $TextDefaultBold17NM)
			(style (alpha = "TA") (width = 100%))
			(text = 'IDS_SHIP_MASTERY_TRIALS_TITLE')
		)

		(block

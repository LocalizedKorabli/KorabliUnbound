			(controller $Instance renderer='DefaultButton'
				(bind enabled "isTrialInProgress")
				(args
					_type =		"SC.Ui_styles.BUTTON_TYPE.SECONDARY"
					_size =		"SIZE.SMALL"
					_width =	96px
					_label =	'IDS_SHIPS_MASTERY_TRIALS_RESET_BUTTON_ALL'
					_methods = "[{	type: 'inputMapping.onRequest',
